                <div class="event-card__details">
                    <div class="event-card__meta-top">
                        <div class="event-card__tags">
                            <span class="tag tag-type"><i class="fa-solid fa-microphone"></i> Thảo luận</span>
                            <span class="tag tag-status">Sắp diễn ra</span>
                            <span class="tag tag-location-type">Online</span>
                        </div>
                        <button class="event-card__share-btn">
                            <i class="fa-solid fa-share-nodes"></i>
                        </button>
                    </div>
                    
